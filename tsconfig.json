{ 
  "compilerOptions": {
    "baseUrl": ".",
    "composite": true,
    "module": "commonjs",
    "target": "es2017",
    "outDir": "./dist",
    "rootDir": "./src",
    "lib": [
      "es2017"
    ],
    "declaration": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "resolveJsonModule": true,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strictPropertyInitialization": false
  },
  "exclude": [
    "**/node_modules",
    "**/*.spec.ts",
    "**/dist"
  ],
  "include": [
    "./src/**/*.ts"
  ] 
} 

